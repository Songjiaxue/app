<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no" />
    <title>我的积分</title>
    <link rel="stylesheet" href="../../dist/css/api.css">
    <link rel="stylesheet" href="../../dist/css/icon.css">
    <link rel="stylesheet" href="../../dist/css/app.css">
</head>
<body data-main="bindTel">
    <div class="js-container">
        <div class="_bind-tel-in">
            <div class="header">
                <div class="icon icon-lt" data-event="closeWin"></div>
                <div class="title">
                    绑定手机号
                </div>
            </div>
            <div class="main">
                <div class="head-img">
                    <div class="img" data-selector="avatar"></div>
                </div>
                <div class="log">
                    <div class="log-group">
                        <div class="log-item">
                            <i class="icon-account"></i>
                            <div>
                                <input type="tel" placeholder="请输入手机号" data-selector="tel" />
                            </div>
                            <i class="icon-cancel-circled"></i>
                        </div>
                        <div class="log-item border">
                            <i class="icon-password"></i>
                            <div>
                                <input type="password" placeholder="请输入验证码" data-selector="code" />
                                <label class="get-verify" data-event="sendSMSCode" data-params='{"tip":"您正在绑定手机号"}'>
                                    点击获取
                                </label>
                            </div>

                        </div>
                        <div class="log-item"></div>
                    </div>
                    <div class="log-btn">
                        <div class="login btn" data-selector="bineTel">绑定</div>
                        <div class="sign btn" data-event="closeWin">返回</div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script src="../../dist/js/lib/jquery.min.js"></script>
    <script src="../../dist/js/lib/async.min.js"></script>
    <script src="../../dist/js/app.js"></script>
    <script>apiready = $.init;</script>
</body>
</html>
