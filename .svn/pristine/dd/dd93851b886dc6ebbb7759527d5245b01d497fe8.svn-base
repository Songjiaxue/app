@import "../common"

[class^="_set"]
    header
        position: absolute
        top: 0px
        left: 0px
        right: 0px
        height: 45px
        overflow: hidden
        background-color: #f5f5f5
        color: #4c4c4c
        z-index: 1000
        .title
            @include auto_center
            font-size: 1.8rem
            line-height: 1em
            min-height: 16px
        .icon
            font-size: 2.4rem
            position: absolute
            line-height: 1em
            top: 50%
            left: 15px
            transform: translate(-50% , -50%)
            -webkit-transform: translate(-50% , -50%)
