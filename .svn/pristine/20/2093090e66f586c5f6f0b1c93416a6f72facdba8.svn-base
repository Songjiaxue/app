@import "../common"

._beauty
    &-home
        header
            height: 45px
            background-color: #e5738e
            color: #FFFFFF
            font-size: 1.8rem
            position: relative
            .back
                position: absolute
                top: 50%
                left: 5px
                transform: translateY(-50%)
                -webkit-transform: translateY(-50%)
                font-size: 2.0rem
            .title
                @include auto-center
        .bg-group
            width: 100%
            position: relative
            .bg-image
                width: 100%
                height: 90px
                @include auto-img
            .bg-gray
                background-color: rgba(0,0,0,0.4)
                z-index: 3
                position: absolute
                right: 0
                left: 0
                bottom: 0
                top: 0
            .bg-favorite
                z-index: 5
                width: 85px
                height: 24px
                border-radius: 5px
                background-color: rgba(255,255,255,0.7)
                position: absolute
                right: 10px
                bottom: 5px
                font-size: 1rem
                color: #e6738e
                .btn
                    @include auto-center
                    width: 100%
                    vertical-align: middle
                    text-align: center
                    &:before
                        font-size: 1.4rem
                        margin-right: 5px
        nav
            background-color: #FFFFFF
            height: 48px
            ul
                @include flex
                height: 48px
                li
                    @include flex-item
                    height: 41px
                    padding: 3px 0
                    color: #808080
                    font-size: 1.2rem
                    text-align: center
                    .icon
                        font-size: 2rem
                        color: #999999
                .active
                    border-bottom: 1px solid #e56683