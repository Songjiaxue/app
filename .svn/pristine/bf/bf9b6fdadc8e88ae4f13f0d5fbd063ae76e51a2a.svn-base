@import "common"
._pay
    header
        height: 45px
        background-color: $header-color
        position: fixed
        top: 0px
        left: 0px
        right: 0px
        color: #FFFFFF
        .back
            position: absolute
            left: 5px
            font-size: 2.4rem
            line-height: 1em
            top: 50%
            transform: translateY(-50%)
            -webkit-transform: translateY(-50%)
        .title
            @include auto_center
            font-size: 1.8rem
            line-height: 1em
    .main
        padding-top: 45px
        .information
            @include pr()
            @include flex
            background-color: #FFFFFF
            min-height: 105px
            position: relative
            .info,.head
                @include flex-item
            .head
                @include auto-img
                position: absolute
                top: 50%
                left: 20px
                transform: translateY(-50%)
                -webkit-transform: translateY(-50%)
                max-width: 55px
                min-width: 55px
                height: 55px
                border-radius: 50%
            .info
                margin-left: 75px
                position: relative
                &-in
                    @include clearfix
                    position: absolute
                    top: 50%
                    left: 0px
                    transform: translateY(-50%)
                    -webkit-transform: translateY(-50%)
                    margin-top: -5px
                    & > div
                        float: left
                        padding: 5px
                        border-bottom: 1px solid #d9d9d9
                    .money
                        font-size: 1.6rem
                        span
                            color: #e6738e
                            font-style: oblique
                    .code
                        font-size: 1.4rem
        .select
            margin-top: 5px
            background-color: #FFFFFF
            &-item
                @include pr
                display: block
                min-height: 60px
                border-top: 2px solid #f2f2f2
                overflow: hidden
                @include flex
                & > div
                    @include flex-item
                .head
                    max-width: 50px
                    position: relative
                    img
                        height: 25px
                        width: auto
                        position: absolute
                        top: 50%
                        left: 0px
                        transform: translateY(-50%)
                        -webkit-transform: translateY(-50%)
                .info
                    position: relative
                    font-size: 1.2rem
                    &-in
                        position: absolute
                        top: 50%
                        left: 0px
                        transform: translateY(-50%)
                        -webkit-transform: translateY(-50%)
                .title
                    color: #333333
                    font-weight: 600
                    margin-bottom: 5px
                .desc
                    color: #808080
                .radio
                    width: 22px
                    max-width: 22px
                    min-width: 22px
                    position: relative
                    &.active
                        &:before
                            color: #FFFFFF
                            background-color: #00aaef
                    &:before
                        @include auto_center
                        font-size: 2rem
                        border-radius: 50%
                    input
                        display: none
        .pay-btn
            margin-top: 35px
            @include pr(40px)
            .btn
                font-size: 1.6rem
                background-color: #e6738e
                color: #FFFFFF
                text-align: center
                padding: 10px
                border-radius: 5px
