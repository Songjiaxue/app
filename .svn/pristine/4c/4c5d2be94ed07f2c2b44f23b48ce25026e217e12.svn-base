@import "../common"
._coin-order
    .header
        height: 45px
        background-color: $header-color
        position: fixed
        top: 0px
        left: 0px
        right: 0px
        overflow: hidden
        color: #ffffff
        z-index: 10
        .icon
            @include auto_center
            left: 15px
            font-size: 2.2rem
            line-height: 1em
        .title
            @include auto_center
            font-size: 1.6rem
            text-align: center
            line-height: 1em
    .main
        margin-top: 50px
        .list-group
            .list-item
                background-color: #ffffff
                margin-top: 5px
                &-top
                    @include clearfix
                    @include pr
                    padding-top: 5px
                    padding-bottom: 5px
                    .top-left
                        @include auto-img
                        float: left
                        height: 24px
                        width: 24px
                        border-radius: 3px
                    .top-right
                        float: left
                        font-size: 1.4rem
                        line-height: 1em
                        margin-left: 5px
                        padding-top: 5px
                        padding-bottom: 5px
                &-center
                    @include pr
                    @include flex
                    padding-bottom: 10px
                    .center-item
                        @include flex-item
                    .center-img
                        width: 90px
                        max-width: 90px
                        min-width: 90px
                        height: 90px
                        @include auto-img
                    .center-text
                        margin-left: 10px
                        &-top
                            padding-top: 5px
                            padding-bottom: 5px
                            min-height: 35px
                            @include flex
                            .text-top-item
                                @include flex-item
                                @include text-over
                                color: #333333
                                font-size: 1.4rem
                            .text-top-right
                                width: 55px
                                max-width: 55px
                                min-width: 55px
                                margin-left: 20px
                                font-size: 1.4rem
                                text-align: right
                        &-center
                            padding-bottom: 5px
                            color: #999999
                            font-size: 1.2rem
                        &-bottom
                            margin-top: 5px
                            width: 70px
                            height: 18px
                            background-color: #e61747
                            color: #ffffff
                            line-height: 18px
                            text-align: center
                            font-size: 1.2rem
            .all
                @include pr
                @include clearfix
                &-in
                    float: right
                    font-size: 1rem
                    margin: 5px 0
            .list-item-bottom
                border-top: 1px solid #d6d7dc
                @include clearfix
                padding: 10px
                .btn-group
                    @include clearfix
                    float: right
                    .btn-item
                        width: 64px
                        height: 30px
                        line-height: 30px
                        text-align: center
                        border-radius: 3px
                        margin-left: 15px
                        float: left
                        border: 1px solid #d6d7dc
                        font-size: 1.2rem