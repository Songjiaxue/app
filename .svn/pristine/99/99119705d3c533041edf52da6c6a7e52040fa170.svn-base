@import "../common"
._set-index
    .main
        padding-top: 55px
        .item
            position: relative
            padding: 10px
            border-bottom: 1px solid #f2f2f2
            font-size: 1.4rem
            line-height: 1em
            vertical-align: middle
            &:before
                position: absolute
                top: 50%
                right: 10px
                transform: translateY(-50%)
                -webkit-transform: translateY(-50%)
                color: #bfbfbf
            i
                font-size: 1.8rem
                margin-right: 8px
                &.c-eb4b4b
                    color: #eb4b4b
                &.c-4bb5eb
                    color: #4bb5eb
                &.c-e67e22
                    color: #e67e22
                &.c-34495e
                    color: #34495e
            &-wrap
                background-color: #FFFFFF
                margin-bottom: 10px
        .logout
            position: absolute
            left: 0px
            right: 0px
            bottom: 0px
            height: 45px
            line-height: 45px
            font-size: 1.6rem
            text-align: center
            background-color: #808080
            color: #FFFFFF
            border-bottom: hidden